@code {
    protected override async Task OnInitializedAsync()
    {
        // 訂閱 ViewModel 事件
        if (ViewModel != null)
        {
            ViewModel.PropertyChanged += OnPropertyChanged;
            ViewModel.LoginStateChanged += OnLoginStateChanged;
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && ViewModel != null)
        {
            // 確保在第一次渲染完成後才檢查 token，這時 JavaScript 已經完全載入
            Console.WriteLine("Login.razor OnAfterRenderAsync: 開始檢查儲存的 token");
            await ViewModel.InitializeAsync();
        }
    }

    private void OnUsernameChanged(string value)
    {
        if (ViewModel != null)
        {
            ViewModel.Username = value;
            StateHasChanged();
        }
    }

    private void OnPasswordChanged(string value)
    {
        if (ViewModel != null)
        {
            ViewModel.Password = value;
            StateHasChanged();
        }
    }

    private void OnPropertyChanged(object? sender, System.ComponentModel.PropertyChangedEventArgs e)
    {
        InvokeAsync(StateHasChanged);
    }

    private void OnLoginStateChanged(object? sender, LoginStateChangedEventArgs e)
    {
        InvokeAsync(() =>
        {
            if (e.IsSuccess && !string.IsNullOrEmpty(e.RedirectUrl))
            {
                Navigation.NavigateTo(e.RedirectUrl, true);
            }
            StateHasChanged();
        });
    }

    private async Task HandleLogin()
    {
        if (ViewModel?.CanLogin == true)
        {
            await ViewModel.LoginAsync();
        }
    }

    public void Dispose()
    {
        // 取消訂閱事件
        if (ViewModel != null)
        {
            ViewModel.PropertyChanged -= OnPropertyChanged;
            ViewModel.LoginStateChanged -= OnLoginStateChanged;
        }
    }
} 