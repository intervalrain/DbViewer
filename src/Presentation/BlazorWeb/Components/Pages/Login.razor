@page "/login"
@rendermode InteractiveServer
@using Presentation.BlazorWeb.ViewModels
@inject LoginViewModel ViewModel
@inject NavigationManager Navigation
@implements IDisposable

<PageTitle>登入 - DbViewer</PageTitle>

@if (ViewModel != null)
{
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <h2>DbViewer 登入</h2>
                <p>請輸入您的帳號密碼</p>
            </div>

            <div class="login-form">
                @if (!string.IsNullOrEmpty(ViewModel.ErrorMessage))
                {
                    <div class="alert alert-danger">
                        @ViewModel.ErrorMessage
                    </div>
                }

                <div class="form-group">
                    <label for="username">帳號</label>
                    <input type="text" 
                           id="username" 
                           class="form-control" 
                           value="@(ViewModel?.Username ?? "")"
                           @oninput="@((ChangeEventArgs e) => OnUsernameChanged(e.Value?.ToString() ?? ""))"
                           placeholder="請輸入帳號" 
                           disabled="@(ViewModel?.IsBusy ?? false)" />
                </div>

                <div class="form-group">
                    <label for="password">密碼</label>
                    <input type="password" 
                           id="password" 
                           class="form-control" 
                           value="@(ViewModel?.Password ?? "")"
                           @oninput="@((ChangeEventArgs e) => OnPasswordChanged(e.Value?.ToString() ?? ""))"
                           placeholder="請輸入密碼" 
                           disabled="@(ViewModel?.IsBusy ?? false)"
                           @onkeypress="@(async (KeyboardEventArgs e) => { if (e.Key == "Enter") await HandleLogin(); })" />
                </div>

                <div class="form-group form-check">
                    <input type="checkbox" 
                           id="rememberMe" 
                           class="form-check-input" 
                           @bind="ViewModel.RememberMe" 
                           disabled="@ViewModel.IsBusy" />
                    <label for="rememberMe" class="form-check-label">記住我</label>
                </div>

                <div class="form-group">
                    <button type="button" 
                            class="btn btn-primary btn-block" 
                            @onclick="HandleLogin" 
                            disabled="@(!ViewModel.CanLogin)">
                        @if (ViewModel.IsBusy)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                            <span>登入中...</span>
                        }
                        else
                        {
                            <span>登入</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="error-container">
        <h3>載入錯誤</h3>
        <p>無法載入登入介面，請重新整理頁面。</p>
        <button type="button" class="btn btn-primary" @onclick="() => Navigation.Refresh(true)">
            重新整理
        </button>
    </div>
}

