<!DOCTYPE html>
<html lang="zh-TW">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="app.css" />
    <link rel="stylesheet" href="Presentation.BlazorWeb.styles.css" />
    <style>
        #blazor-error-ui {
            background: #ffebee;
            bottom: 0;
            box-shadow: 0 -1px 2px rgba(0, 0, 0, 0.2);
            display: none;
            left: 0;
            padding: 0.6rem 1.25rem 0.7rem 1.25rem;
            position: fixed;
            width: 100%;
            z-index: 1000;
            color: #721c24;
            border-top: 2px solid #f44336;
        }

        #blazor-error-ui .dismiss,
        #blazor-error-ui .reload {
            color: #721c24;
            cursor: pointer;
            font-weight: bold;
            text-decoration: none;
            margin-left: 1rem;
            padding: 0.25rem 0.5rem;
            border-radius: 4px;
            transition: background-color 0.2s ease;
        }

        #blazor-error-ui .dismiss:hover,
        #blazor-error-ui .reload:hover {
            background-color: rgba(114, 28, 36, 0.1);
        }

        #blazor-error-ui .reload {
            background-color: #f44336;
            color: white;
        }

        #blazor-error-ui .reload:hover {
            background-color: #d32f2f;
        }
    </style>
    <ImportMap />
    <link rel="icon" type="image/png" href="favicon.png" />
    <HeadOutlet />
</head>

<body>
    <Routes />
    <div id="blazor-error-ui">
        An unhandled error has occurred.
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.web.js"></script>
    <script src="js/app.js"></script>
    <script>
        // Blazor 錯誤 UI 處理
        document.addEventListener('DOMContentLoaded', function() {
            const errorUI = document.getElementById('blazor-error-ui');
            if (errorUI) {
                // 處理重新載入按鈕
                const reloadButton = errorUI.querySelector('.reload');
                if (reloadButton) {
                    reloadButton.addEventListener('click', function(e) {
                        e.preventDefault();
                        window.location.reload();
                    });
                }
                
                // 處理關閉按鈕
                const dismissButton = errorUI.querySelector('.dismiss');
                if (dismissButton) {
                    dismissButton.addEventListener('click', function() {
                        errorUI.style.display = 'none';
                    });
                }
            }
        });

        // 檢查 JavaScript 是否完全載入
        window.isJavaScriptReady = function () {
            return typeof window.getCookie === 'function' && 
                   typeof window.setCookie === 'function' && 
                   typeof window.removeCookie === 'function';
        };

        // Cookie 操作函數
        window.getCookie = function (name) {
            try {
                if (!document.cookie) {
                    console.log('getCookie: document.cookie 為空');
                    return '';
                }
                
                const value = `; ${document.cookie}`;
                const parts = value.split(`; ${name}=`);
                
                if (parts.length === 2) {
                    const result = parts.pop().split(';').shift();
                    console.log(`getCookie: 找到 ${name} = ${result ? result.substring(0, 10) + '...' : 'empty'}`);
                    return result || '';
                }
                
                console.log(`getCookie: 沒有找到 ${name}`);
                return '';
            } catch (error) {
                console.error(`getCookie 錯誤:`, error);
                return '';
            }
        };

        window.setCookie = function (name, value, days) {
            const expires = new Date();
            expires.setTime(expires.getTime() + (days * 24 * 60 * 60 * 1000));
            document.cookie = `${name}=${value};expires=${expires.toUTCString()};path=/;SameSite=Lax`;
            console.log(`Cookie 已設定: ${name}=${value}`);
        };

        window.removeCookie = function (name) {
            // 清除所有可能的路徑
            document.cookie = `${name}=;expires=Thu, 01 Jan 1970 00:00:00 UTC;path=/`;
            document.cookie = `${name}=;expires=Thu, 01 Jan 1970 00:00:00 UTC;path=/;domain=${window.location.hostname}`;
            document.cookie = `${name}=;expires=Thu, 01 Jan 1970 00:00:00 UTC`;
            console.log(`Cookie 已移除: ${name}`);
        };

        // 清除認證 Token
        window.clearAuthToken = function () {
            console.log('清除認證 Token...');
            document.cookie = `auth_token=;expires=Thu, 01 Jan 1970 00:00:00 UTC;path=/`;
            console.log('認證 Token 已清除');
            
            // 顯示成功訊息
            showToast('已成功登出', 'success', 3000);
        };

        // Toast 通知函數
        let toastId = 1;

        window.showToast = function (message, type = 'info', duration = 5000) {
            const container = document.getElementById('toast-container');
            if (!container) return;

            const toast = document.createElement('div');
            const id = toastId++;
            
            toast.className = `toast ${type}`;
            toast.innerHTML = `
                <div class="toast-header">
                    <span class="toast-icon">${getToastIcon(type)}</span>
                    <span class="toast-title">${getToastTitle(type)}</span>
                    <button class="toast-close" onclick="removeToast(${id})">×</button>
                </div>
                <div class="toast-body">${message}</div>
                <div class="toast-progress">
                    <div class="progress-bar" style="animation-duration: ${duration}ms"></div>
                </div>
            `;

            toast.setAttribute('data-toast-id', id);
            container.appendChild(toast);

            // 顯示動畫
            setTimeout(() => {
                toast.classList.add('show');
            }, 50);

            // 自動移除
            setTimeout(() => {
                removeToast(id);
            }, duration);

            return id;
        };

        window.removeToast = function (id) {
            const toast = document.querySelector(`[data-toast-id="${id}"]`);
            if (toast) {
                toast.classList.remove('show');
                setTimeout(() => {
                    if (toast.parentNode) {
                        toast.parentNode.removeChild(toast);
                    }
                }, 300);
            }
        };

        function getToastIcon(type) {
            switch (type) {
                case 'error': return '❌';
                case 'success': return '✅';
                case 'warning': return '⚠️';
                case 'info': return 'ℹ️';
                default: return 'ℹ️';
            }
        }

        function getToastTitle(type) {
            switch (type) {
                case 'error': return '錯誤';
                case 'success': return '成功';
                case 'warning': return '警告';
                case 'info': return '資訊';
                default: return '通知';
            }
        }

        // 全域錯誤處理
        window.addEventListener('error', function(e) {
            showToast(`發生錯誤: ${e.message}`, 'error');
        });

        window.addEventListener('unhandledrejection', function(e) {
            showToast(`Promise 錯誤: ${e.reason}`, 'error');
        });
    </script>
</body>

</html>
