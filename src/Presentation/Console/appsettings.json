{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "File": {
      "Path": "logs/dbtest_{Date}.log",
      "RollingInterval": "Day",
      "RetainedFileCountLimit": 7,
      "OutputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj}{NewLine}{Exception}"
    },
    "Console": {
      "OutputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
    }
  },
  "Application": {
    "DefaultTheme": "Default",
    "HistorySize": 100,
    "DefaultTimeout": 30,
    "AutoSaveSettings": true,
    "ConnectionsFilePath": "connections.json",
    "HistoryFilePath": "dbtest_history.txt"
  },
  "Database": {
    "DefaultConnectionTimeout": 30,
    "DefaultCommandTimeout": 30,
    "MaxRetryAttempts": 3
  },
  "Jwt": {
    "SecretKey": "your-super-secret-jwt-key-must-be-at-least-256-bits-long",
    "Issuer": "YourDatabaseApp",
    "Audience": "YourDatabaseAppUsers",
    "ExpireMinutes": 60
  }
} 