    <RootNamespace>Presentation.Console</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Application.Contracts\Application.Contracts.csproj" />
    <ProjectReference Include="..\..\Application\Application.csproj" />
